<Page x:Class="CSVReader.MainWindowPages.OutputDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSVReader.MainWindowPages"
      xmlns:lang="clr-namespace:CSVReader.Language;assembly=CSVReader"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OutputDataPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="DataGrid"
                  Grid.Row="0"
                  IsReadOnly="True"/>
        <Button x:Name="Filtration"
                Content="{x:Static lang:InterfaceLanguage.Filtration}"
                Grid.Row="1"
                Height="25"
                Width="100"
                Click="Filtration_Click"/>
    </Grid>
</Page>
